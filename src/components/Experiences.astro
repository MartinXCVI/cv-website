    <div class="subtitle-div">
      <h2 class="subtitles">Experience</h2>
      <hr class="lateral-line">
    </div>
    
    <JobCard 
      year={2024}
      job="Current Job Name"
      company="Company Name"
      location="Company Location"
      description="Lorem ipsum dolor sit amet consectetur adipisicing elit. Rem porro commodi officiis ipsam sint enim at corporis obcaecati ipsum perferendis."
    />
    <JobCard 
      year={2022}
      job="Last Job Name"
      company="Company Name"
      location="Company Location"
      description="Lorem ipsum dolor sit amet consectetur adipisicing elit. Rem porro commodi officiis ipsam sint enim at corporis obcaecati ipsum perferendis."
    />
    <JobCard 
      year={2019}
      job="Before Last Job Name"
      company="Company Name"
      location="Company Location"
      description="Lorem ipsum dolor sit amet consectetur adipisicing elit. Rem porro commodi officiis ipsam sint enim at corporis obcaecati ipsum perferendis."
    />
  </section>
</section>

<style>
  .experience-wrapper {
    width: 50%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .experience-section {
    width: 75%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  @media all and (max-width: 959px) {

    .experience-wrapper {
      width: 100%;
      margin-bottom: 5rem;
    }

  }

</style>
<section class="contact-wrapper">
  <h2>Contact Me</h2>
  <form action="" id="contact-form">
    <fieldset>
      <legend>Contact Form</legend>
      <div class="form-div">
        <label for="fullname-input">Full Name:</label>
        <input type="text" name="fullname" id="fullname-input">
      </div>
      <div class="form-div">
        <label for="email-input">Email:</label>
        <input type="email" name="email" id="email-input">
      </div>
      <div class="form-div">
        <label for="subject-input">Subject</label>
        <input type="text" name="subject" id="subject-input">
      </div>
      <div class="form-div">
        <label for="msg-input">Message:</label>
        <textarea name="message" id="msg-input" cols="10" rows="10"></textarea>
      </div>
    </fieldset>
    <section class="form-buttons">
      <button type="submit" id="send-btn" class="form-btn">Send</button>
      <button type="reset" id="reset-btn" class="form-btn">Reset</button>
    </section>
  </form>
</section>

<style>
  .contact-wrapper {
    width: 50%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  #contact-form {
    width: 75%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  #contact-form fieldset {
    width: 75%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    border-top: 1px solid gray;
    border-bottom: 1px solid gray;
    margin-bottom: 1rem;
  }

  #contact-form fieldset legend {
    text-align: center;
    padding-inline: 0.5rem;
  }

  .form-div {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }

  .form-div label {
    margin-bottom: 0.5rem;
  }

  .form-div input, .form-div textarea {
    width: 100%;
    margin-bottom: 1rem;
    border: 1px solid gray;
    padding: 0.25rem;
    border-radius: 0.25rem;
  }

  textarea {
    resize: none;
  }

  .form-buttons {
    width: 100%;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }

  .form-btn {
    padding: 0.75rem 2.5rem;
    border-radius: 0.25rem;
    color: white;
    text-shadow: 0 0 0.1rem #000;
  }

  #send-btn {
    background-color: springgreen;
  }

  #reset-btn {
    background-color: orangered;
  }

</style>